<Window x:Class="TestAsyncAwaitTiming.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestAsyncAwaitTiming"
        mc:Ignorable="d"
        Title="MainWindow" Width="400" SizeToContent="Height" ResizeMode="NoResize">
    <StackPanel>
        <Button Content="シンプルに await する場合" Click="ButtonSimple_Click" />
        <Button Content="「内部で await している関数」を呼びだす場合" Click="ButtonAwait_Click" />
        <Button Content="「内部で await と Sleep している関数」を呼びだす場合" Click="ButtonAwaitSleep_Click" />
        <Button Content="「内部で Sleep と await している関数」を呼びだす場合" Click="ButtonSleepAwait_Click" />
    </StackPanel>
</Window>
